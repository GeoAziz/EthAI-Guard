[flake8]
# Maximum line length
max-line-length = 120

# Maximum complexity (McCabe)
max-complexity = 15

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .coverage

# Error codes to ignore
ignore =
    E203,  # whitespace before ':' (conflicts with black)
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator (outdated)
    W504   # line break after binary operator

# Errors to enforce (core checks)
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    test_*.py:E501,N802
    *_test.py:E501,N802

# Show source code for errors
show-source = True

# Show pep8 violation statistics
statistics = True

# Count errors and warnings
count = True

# Format output (default is fine)
format = default
